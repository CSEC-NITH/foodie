<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.hackathon.csec.foodie.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:title="Foodie"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
     />

    <RelativeLayout
        android:background="#3ba9f1b5"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

     <ImageView
         android:scaleType="centerCrop"
        android:src="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="#bcbbc1"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/cardSearchView">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/magnifyingglass"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="bottom"
                    android:layout_weight="3"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Search Restaurants , Cuisine"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:padding="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/home_recycler"
            android:background="#faf8c9"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:padding="7dp"
            android:background="#77849c"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageButton
                android:background="#77849c"
                android:scaleType="centerInside"
                android:src="@drawable/cutlery"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:background="#77849c"
                android:scaleType="centerInside"
                android:src="@drawable/cart"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:background="#77849c"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
